{
	"private": true,
	"preview": true,
	"name": "wow-bundle",
	"displayName": "WoW Bundle",
	"description": "World of Warcraft addon developer toolset for VS Code",
	"version": "2.0.0",
	"icon": "images/wow-icon.png",
	"publisher": "Septh",
	"author": {
		"name": "Stephan Schreiber",
		"url": "https://github.com/Septh"
	},
	"license": "MIT",
	"homepage": "https://marketplace.visualstudio.com/items?itemName=Septh.wow-bundle",
	"galleryBanner": {
		"color": "#ffffff",
		"theme": "light"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"World of Warcraft",
		"WoW",
		"addon",
		"toc",
		"FrameXML"
	],
	"engines": {
		"vscode": "^1.30.0"
	},
	"main": "extension/main.js",
	"activationEvents": [
		"onLanguage:lua",
		"workspaceContains:*.toc",
		"onCommand:wowbundle.showSettings",
		"onCommand:wowbundle.hideSettings"
	],
	"contributes": {
		"languages": [
			{
				"id": "wow-lua",
				"extensions": [
					".wow-lua"
				],
				"aliases": [
					"Lua (WoW addon)"
				],
				"configuration": "./extension/languages/wow-lua.language-configuration.json"
			},
			{
				"id": "wow-toc",
				"extensions": [
					".toc"
				],
				"aliases": [
					"Toc (WoW addon)"
				],
				"configuration": "./extension/languages/wow-toc.language-configuration.json"
			}
		],
		"grammars": [
			{
				"scopeName": "source.wow.lua",
				"injectTo": [
					"source.lua"
				],
				"path": "./extension/languages/grammars/wow-lua.tmLanguage.json"
			},
			{
				"language": "wow-toc",
				"scopeName": "source.wow.toc",
				"path": "./extension/languages/grammars/wow-toc.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "wow-lua",
				"path": "./extension/languages/snippets/wow-lua.snippets.json"
			},
			{
				"language": "wow-toc",
				"path": "./extension/languages/snippets/wow-toc.snippets.json"
			}
		],
		"commands": [
			{
				"category": "WoW Bundle",
				"command": "wowbundle.showSettings",
				"title": "Edit Lua and Toc colors"
			},
			{
				"category": "WoW Bundle",
				"command": "wowbundle.hideSettings",
				"title": "Hide settings panel"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Septh/vscode-wow-bundle"
	},
	"bugs": {
		"url": "https://github.com/Septh/vscode-wow-bundle/issues"
	},
	"scripts": {
		"compile": "rollup --c",
		"watch": "rollup -cw",
		"clean": "trash ./extension/main.js* ./extension/webview/index.js* ./out",
		"grammar": "node tools/1-parse-blizzard-interface-code.js && node tools/2-make-grammar.js",
		"vscode:prepublish": "npm run clean && npm run compile",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"rxjs": "^6.5.2"
	},
	"devDependencies": {
		"@types/angular": "^1.6.54",
		"@types/angular-animate": "^1.5.10",
		"@types/angular-sanitize": "^1.3.7",
		"@types/node": "^12.0.10",
		"@wessberg/rollup-plugin-ts": "^1.1.59",
		"cheerio": "^1.0.0-rc.3",
		"clui": "^0.3.6",
		"fs-jetpack": "^2.2.2",
		"luaparse": "^0.2.1",
		"rollup": "^1.16.2",
		"rollup-plugin-commonjs": "^10.0.0",
		"rollup-plugin-filesize": "^6.1.1",
		"rollup-plugin-gen-html": "^0.2.5",
		"rollup-plugin-html": "^0.2.1",
		"rollup-plugin-node-externals": "^2.0.0",
		"rollup-plugin-node-resolve": "^5.0.4",
		"rollup-plugin-postcss": "^2.0.3",
		"rollup-plugin-terser": "^5.0.0",
		"single-line-log": "^1.1.2",
		"trash": "^6.0.0",
		"trash-cli": "^3.0.0",
		"tslint": "^5.18.0",
		"typescript": "^3.5.2",
		"typescript-tslint-plugin": "^0.5.2",
		"vscode": "^1.1.34"
	},
	"__metadata": {
		"id": "191fe3c2-f05c-45f3-baa8-a046773863c9",
		"publisherId": "887d8eeb-f941-478d-a425-6fc5a1ec5c4b",
		"publisherDisplayName": "Septh"
	}
}
