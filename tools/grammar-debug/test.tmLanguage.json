{
    "$schema": "https://raw.githubusercontent.com/Septh/tmlanguage/master/tmLanguage.schema.json",

    "scopeName": "source.wow",
    "fileTypes": [
        "lua"
    ],
    "patterns": [
        {
            "name": "comment.block.lua",
            "begin": "--\\[(=*)\\[",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.comment.lua"
                }
            },
            "end": "\\]\\1\\]",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.comment.lua"
                }
            }
        },
        {
            "match": "(['\"])[a-zA-Z0-9_]+(\\1)",
            "patterns": [
                {
                    "name": "event.wow",
                    "match": "(['\"])ACHIEVEMENT_EARNED\\1"
                },
                {
                    "name": "invalid",
                    "match": "(['\"])ACHIEVEMENT_PLAYER_NAME\\1"
                }
            ]
        }
    ]
}
